#!/bin/bash

usage()
{
    echo "Usage: ${0##*/} {start|stop|restart}"
    exit 1
}
# absolute path to this script directory (without script name)
APP_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $APP_HOME
export PATH=/opt/jdk/bin/:$PATH   #Adding Java to the path

set -x
set -e

echo "RESTART"
cd solr/example

if [ "$1" == "restart" ]
then
  nohup java -jar start.jar  java -jar -DSTOP.PORT=9284 -DSTOP.KEY=opensecret start.jar -Djetty.port=9283 --daemon >/dev/null 2>&1 &
  java -jar -DSTOP.PORT=9244 -DSTOP.KEY=opensecret start.jar --stop
elif [ "$1" == "stop" ]
then
  java -jar -DSTOP.PORT=9244 -DSTOP.KEY=opensecret start.jar --stop
elif [ "$1" == "start" ]
then
  nohup java -jar start.jar  java -jar -DSTOP.PORT=9284 -DSTOP.KEY=opensecret start.jar -Djetty.port=9283 --daemon >/dev/null 2>&1 &
else
  usage;
fi


